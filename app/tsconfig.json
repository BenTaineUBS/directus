{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["esnext", "dom"],
		"types": ["vite/client"],
		"isolatedModules": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"references": [
		{ "path": "../packages/extensions-sdk" },
		{ "path": "../packages/format-title" },
		{ "path": "../packages/shared" }
	]
}
